<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cines.Sincines">

    <ImageView
        android:id="@+id/PeligroIV"
        android:layout_width="389dp"
        android:layout_height="328dp"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/peligro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="430dp"
        android:layout_height="121dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="PELICULA NO DISPONIBLE EN CINES ACTUALMENTE"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginTop="16dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toEndOf="@+id/PeligroIV"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/PeligroIV"
        app:layout_constraintTop_toBottomOf="@+id/PeligroIV" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>