<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/Genero"
        android:layout_width="336dp"
        android:layout_height="30dp"
        android:layout_below="@+id/Lanzamiento"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/Imagen_Pelicula"
        android:layout_width="wrap_content"
        android:layout_height="319dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="77dp"
        android:foregroundGravity="center_horizontal"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Lanzamiento"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/Director"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/Imagen_Pelicula"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/Sinopsis"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_below="@+id/Genero"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/Director"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/Titulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/BotonReserva"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_below="@+id/Sinopsis"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="18dp"
        android:text="Reservar"
        android:visibility="visible" />

</RelativeLayout>
</ScrollView>