    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

            <TextView
                android:id="@+id/UsernameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImagenPerfil"
                android:layout_marginStart="2dp"
                android:layout_marginTop="-117dp"
                android:layout_toEndOf="@+id/ImagenPerfil"
                android:text="Nombre de Usuario:" />

        <ImageView
            android:id="@+id/ImagenPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="48dp"
            tools:src="@tools:sample/avatars" />

            <TextView
            android:id="@+id/Email_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="112dp"
            android:layout_toEndOf="@+id/ImagenPerfil"
            android:text="Email:" />

            <TextView
                android:id="@+id/Email_texto"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="111dp"
                android:layout_toEndOf="@+id/Email_TV" />

            <Button
            android:id="@+id/Boton_Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="162dp"
            android:layout_marginBottom="433dp"
            android:text="Editar" />

            <EditText
                android:id="@+id/Username_Cambiar"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="255dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:visibility="invisible" />

            <EditText
            android:id="@+id/Email_Cambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Email_TV"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-23dp"
            android:layout_toEndOf="@+id/Email_TV"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/Imagen_Cambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Imagen_TV"
            android:layout_marginStart="1dp"
            android:layout_marginTop="-26dp"
            android:layout_toEndOf="@+id/Imagen_TV"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:visibility="invisible" />

        <Button
            android:id="@+id/Boton_Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImagenPerfil"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="141dp"
            android:layout_marginBottom="366dp"
            android:layout_toEndOf="@+id/ImagenPerfil"
            android:text="Guardar"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Imagen_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Email_TV"
            android:layout_alignStart="@+id/Email_TV"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="40dp"
            android:text="Imagen"
            android:visibility="invisible" />

            <TextView
                android:id="@+id/Username_Texto"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="16dp" />
    </RelativeLayout>
